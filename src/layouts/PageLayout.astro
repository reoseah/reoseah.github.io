---
import "../style.css";
---

<style>
	body {
		background-color: rgb(243 244 246);
		font-family: "STIX Two Text", "Times New Roman", Times, serif;
		font-size: 1.3125rem;
		font-weight: 500;
		letter-spacing: -0.01em;
		line-height: 1.35;
	}

	h1 {
		height: 4rem;
		margin-inline: auto;
		display: flex;
		align-items: center;

		max-width: calc(100% - 2rem);
		@media (width >= 32rem) {
			max-width: min(60rem, 100% - 4rem);
		}
	}

	main {
		display: grid;
		grid-template-columns: 1fr calc(100% - 2rem) 1fr;
		row-gap: 1rem;
		margin-bottom: 1rem;

		@media (width >= 32rem) {
			grid-template-columns: 1fr min(60rem, 100% - 4rem) 1fr;
			margin-bottom: 2rem;
		}

		& > :global(*) {
			grid-column: 2 / span 1;
		}
	}

	:global(a) {
		text-decoration: underline;
	}
</style>

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>reoseah.github.io</title>
	</head>

	<body>
		<header>
			<h1>
				<a href="/">reoseah.github.io</a>
			</h1>
		</header>

		<main>
			<slot />
		</main>
	</body>
</html>
